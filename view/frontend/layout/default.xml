<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <block class="Magento\Framework\View\Element\Template"
                   name="notification.block.header.container"
                   template="Lotsofpixels_NotificationBar::html/notification_bar.phtml" after="-">
                <arguments>
                    <argument name="notificationbar.viewmodel" xsi:type="object">Lotsofpixels\NotificationBar\ViewModel\Notificationbar</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
